create table 'produto' (
'id' int(11) not null auto_increment,
'descricao', varchar(255) not null,
'preco' decimal(10,2) not null,
primary key (id),
);

create table 'cliente' (
'id' int(11) not null auto_increment,
'nome' varchar(255) not null,
primary key (id)
);

create table 'venda' (
'id' int(11) not null auto_increment,
'clienteId' int(11),
'data' date not null,
'vendedor' varchar(255) not null,
primary key (id),
foreign key (clienteId) references cliente(clienteId)
);

create table 'rel_venda_produto' (
'idProduto' int(11) not null,
'idVenda' int(11) not null,
primary key (idProduto, idVenda),
foreign key (idProduto) references produto(id),
foreign key (idVenda) references venda(id)
);


/*pega todas as vendas de um determinado produto */
(select count(idVenda) as 'Quantidade de Vendas'
from rel_venda_produto
where idProduto = (select id from produto where descricao = <passado pelo usuario>))
